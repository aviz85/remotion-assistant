{
  "name": "kinetic-video-agent-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda agent for kinetic video generation using Claude on Bedrock",
  "main": "dist/handler.js",
  "scripts": {
    "build": "esbuild handler.ts --bundle --platform=node --target=node20 --outdir=dist --format=cjs --external:@aws-sdk/* --external:aws-crt --external:@remotion/*",
    "build:lambda": "npm run build && cp -r node_modules dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "local": "npx ts-node test-local.ts"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.679.0",
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/client-secrets-manager": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^3.679.0",
    "@remotion/lambda-client": "4.0.407",
    "@fal-ai/client": "^1.2.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.17.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
